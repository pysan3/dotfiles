# focus window
shift + alt - j : yabai -m window --focus south || yabai -m window --focus west || yabai -m display --focus south || yabai -m display --focus west
shift + alt - k : yabai -m window --focus north || yabai -m window --focus east || yabai -m display --focus north || yabai -m display --focus east
shift + alt - n : yabai -m window --focus next || yabai -m display --focus next
shift + alt - p : yabai -m window --focus prev || yabai -m display --focus prev

# swap window
shift + ctrl - x : yabai -m window --swap recent
shift + ctrl - h : yabai -m window --swap west
shift + ctrl - j : yabai -m window --swap south
shift + ctrl - k : yabai -m window --swap north
shift + ctrl - l : yabai -m window --swap east

# focus monitor
alt + cmd + ctrl - x : yabai -m display --focus last
alt + cmd + ctrl - z : yabai -m display --focus prev
alt + cmd + ctrl - c : yabai -m display --focus next
alt + cmd + ctrl - 1 : yabai -m display --focus 1
alt + cmd + ctrl - 2 : yabai -m display --focus 2
alt + cmd + ctrl - 3 : yabai -m display --focus 3

# send window to monitor and follow focus
alt + cmd + ctrl - x : yabai -m window --display last; yabai -m display --focus last
alt + cmd + ctrl - h : yabai -m window --display prev; yabai -m display --focus prev
alt + cmd + ctrl - l : yabai -m window --display next; yabai -m display --focus next
alt + cmd + ctrl - 1 : yabai -m window --display 1; yabai -m display --focus 1
alt + cmd + ctrl - 2 : yabai -m window --display 2; yabai -m display --focus 2
alt + cmd + ctrl - 3 : yabai -m window --display 3; yabai -m display --focus 3

# toggle window fullscreen zoom
alt + shift - z : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
alt + cmd + ctrl - f : yabai -m window --toggle native-fullscreen

# float / unfloat window and restore position
alt + shift - f : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2

