% \sectionl: \section with label
% Usage: \sectionl[*]{section-name}{label}
% with `*`, remove section number (same as \section)
\NewDocumentCommand{\sectionl}{s m m}{
  \IfBooleanTF{#1}{\section*{#2}}{\section{#2}}
  \label{sec:#3}
}
% \subsectionl: \subsection with label
% Usage: \subsectionl[*]{subsection-name}{label}
% with `*`, remove subsection number (same as \subsection)
\NewDocumentCommand{\subsectionl}{s m m}{
  \IfBooleanTF{#1}{\subsection*{#2}}{\subsection{#2}}
  \label{sec:#3}
}
% \subsubsectionl: \subsubsection with label
% Usage: \subsubsectionl[*]{subsubsection-name}{label}
% with `*`, remove subsubsection number (same as \subsubsection)
\NewDocumentCommand{\subsubsectionl}{s m m}{
  \IfBooleanTF{#1}{\subsubsection*{#2}}{\subsubsection{#2}}
  \label{sec:#3}
}
