# run peco with C-r
function peco-history-selection() {
    BUFFER=`history -n 1 | tac  | awk '!a[$0]++' | peco`
    CURSOR=$#BUFFER
    zle reset-prompt
}
zle -N peco-history-selection
bindkey '^R' peco-history-selection

if [ x"$MYENV" == x ]; then
    export MYENV='undefined';
fi
if [ x"$PCNAME" == x ]; then
    export PCNAME='undefined';
fi

alias python="python3"
alias pip="pip3"
alias piplist="pip freeze | grep -v 'pkg-resources' > requirements.txt; less requirements.txt"
alias act="source bin/activate"
venv() {
	python3 -m venv "$@";
	cd "$@";
	source bin/activate;
	pip3 install wheel;
    piplist;
}
cinit() {
    rm -rf build;
    mkdir build;
    cd build;
    cmake ..;
}
update_dotfiles() {
    cd ~/dotfiles;
    git pull origin master;
    ga .
    gc "updated from $PCNAME";
    git push origin master;
    ./setup.sh;
}

